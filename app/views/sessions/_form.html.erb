<div class="container">
  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
        <div class="form-group row mt-2">
          <%= f.label :email, class: "col-3 col-form-label"%>
          <div class="col-8">
            <%= f.text_field :email, class: "form-control bg-custom-dark text-custom-light", placeholder: "Enter your email"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-3 col-form-label"%>
          <div class="col-8">
            <%= f.password_field :password, class: "form-control bg-custom-dark text-custom-light", placeholder: "Enter your password"%>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Log In", class: "btn btn-outline-warning"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ I don\'t have an account ]', signup_path, class: "text-center text-warning w-auto"%>
  </div>
</div>