<% @categories.each do |category|%>
  <div class="mt-4">
    <div class="card text-center">
    <div class="card-body">
      <h5 class="card-title-category"><%= link_to category.name, category_path(category) %></h5>
    </div>
    <div class="card-footer">
      <small>Created <%= time_ago_in_words(category.created_at)%> ago</small>
    </div>
  </div>
<% end %>