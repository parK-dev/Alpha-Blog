<%= render 'shared/errors', obj: @category%>
<div class="container">
  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= form_with(model: @category, local: true) do |f|%>
        <div class="form-group row mt-2">
          <%= f.label :name, class: "col-2 col-form-label"%>
          <div class="col-8">
            <%= f.text_field :name, class: "form-control bg-custom-dark text-custom-light", placeholder: "Enter category name"%>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit class: "btn btn-outline-warning"%>
        </div>
      <% end %>
    </div>
  </div>
</div>